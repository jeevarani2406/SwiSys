# =============================================================================
# SwiSys Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment.
# NEVER commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# For SQLite (development):
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (production):
# DATABASE_URL=postgres://user:password@localhost:5432/swisys_db

# -----------------------------------------------------------------------------
# SECURITY (REQUIRED - Change these in production!)
# -----------------------------------------------------------------------------
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production-use-python-to-generate

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Required for OTP verification)
# -----------------------------------------------------------------------------
# SMTP Server settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@swisys.com

# -----------------------------------------------------------------------------
# CORS SETTINGS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
# Set to True to allow all origins (development only!)
CORS_ALLOW_ALL_ORIGINS=True

# Comma-separated list of allowed frontend origins (used when CORS_ALLOW_ALL_ORIGINS=False)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Comma-separated list of trusted origins for CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# SECURITY HEADERS (Production settings)
# -----------------------------------------------------------------------------
# Redirect all HTTP to HTTPS
SECURE_SSL_REDIRECT=False

# HTTP Strict Transport Security (HSTS)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Cookie security
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Content security
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# -----------------------------------------------------------------------------
# FILE UPLOAD LIMITS
# -----------------------------------------------------------------------------
# Maximum upload size in bytes (default: 100MB)
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO